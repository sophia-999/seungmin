            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="사용중"
            android:textSize="30dp"></TextView>

        <TextView
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="몇명"
            android:textSize="30dp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
